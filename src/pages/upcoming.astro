---
import Layout from "../layouts/Layout.astro";
import { getEvents, getParticipants } from "../lib/db";

const events = await getEvents();
const participants = await getParticipants();

// Filter future events
const today = new Date();
today.setHours(0, 0, 0, 0);

const futureEvents = events.filter((e) => {
    const eventDate = new Date(e.date);
    return eventDate >= today;
});

// Enrich with counts
const eventsWithCount = futureEvents.map((e) => ({
    ...e,
    participantsCount: participants.filter((p) => p.eventId === e.id).length,
}));

// Sort chronologically
eventsWithCount.sort((a, b) => {
    const dateA = new Date(`${a.date}T${a.time}`);
    const dateB = new Date(`${b.date}T${b.time}`);
    return dateA.getTime() - dateB.getTime();
});

// Group by date
const groupedEvents: Record<string, typeof eventsWithCount> = {};
eventsWithCount.forEach((e) => {
    if (!groupedEvents[e.date]) {
        groupedEvents[e.date] = [];
    }
    groupedEvents[e.date].push(e);
});

const sortedDates = Object.keys(groupedEvents).sort();
const user = Astro.locals.user;
---

<Layout title="Prossimi Eventi">
    <div
        class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3"
    >
        <div>
            <h1 class="display-6 mb-0">Eventi Compagnia</h1>
        </div>
        <div class="d-flex flex-wrap align-items-center gap-3">
            <div
                class="btn-group shadow-sm"
                role="group"
                aria-label="Visualizzazione"
            >
                <a href="/" class="btn btn-outline-primary">
                    <i class="bi bi-calendar3"></i>
                    <span class="d-none d-sm-inline">Calendario</span>
                </a>
                <a href="/upcoming" class="btn btn-primary active">
                    <i class="bi bi-list-ul"></i>
                    <span class="d-none d-sm-inline">Lista</span>
                </a>
            </div>

            {
                user ? (
                    <a href="/?create=true" class="btn btn-success">
                        <i class="bi bi-plus-lg" /> Crea Evento
                    </a>
                ) : (
                    <div class="alert alert-warning py-2 px-3 d-inline-block mb-0 small">
                        Accedi per creare eventi
                    </div>
                )
            }
        </div>
    </div>

    {
        sortedDates.length === 0 ? (
            <div class="alert alert-info">Nessun evento in programma.</div>
        ) : (
            <div class="roadmap">
                {sortedDates.map((date) => {
                    const dateObj = new Date(date);
                    const dateStr = dateObj.toLocaleDateString("it-IT", {
                        weekday: "long",
                        day: "numeric",
                        month: "long",
                        year: "numeric",
                    });

                    return (
                        <div class="mb-4">
                            <h4 class="text-primary text-capitalize border-bottom pb-2">
                                {dateStr}
                            </h4>
                            <div class="list-group">
                                {groupedEvents[date].map((event) => (
                                    <button
                                        type="button"
                                        class="list-group-item list-group-item-action d-flex flex-column flex-sm-row justify-content-between align-items-sm-center event-trigger gap-2"
                                        data-id={event.id}
                                    >
                                        <div class="text-start">
                                            <div class="d-flex align-items-center flex-wrap gap-2">
                                                <span class="fw-bold text-primary">
                                                    {event.time}
                                                </span>
                                                <span class="event-title fw-semibold">
                                                    {event.title}
                                                </span>
                                            </div>
                                            {event.location && (
                                                <div class="small text-muted mt-1">
                                                    <i class="bi bi-geo-alt me-1" />
                                                    {event.location}
                                                </div>
                                            )}
                                        </div>
                                    </button>
                                ))}
                            </div>
                        </div>
                    );
                })}
            </div>
        )
    }

    <style>
        .roadmap h4 {
            font-weight: 600;
            letter-spacing: -0.5px;
            margin-top: 2rem;
        }
        .event-trigger {
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            color: inherit;
            margin-bottom: 0.8rem;
            border-radius: 16px !important;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            backdrop-filter: blur(8px);
            padding: 1.2rem;
        }
        .event-trigger:hover {
            background: rgba(99, 102, 241, 0.1);
            transform: translateX(8px);
            border-color: #6366f1;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        [data-bs-theme="light"] .event-trigger {
            background: rgba(255, 255, 255, 0.6);
        }
        .list-group {
            border: none;
        }
    </style>

    <!-- Reused Modal Structure (Simple version) -->
    <div
        class="modal fade"
        id="upcomingDetailModal"
        tabindex="-1"
        aria-hidden="true"
    >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="upDetailTitle"></h5>
                    <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div
                        id="upDetailDesc"
                        class="mb-3 bg-light p-3 rounded"
                        style="min-height: 50px; color: #333;"
                    >
                    </div>
                    <p class="mb-3">
                        <i class="bi bi-geo-alt-fill text-primary"></i>
                        <span id="upDetailLocation" class="fw-bold"></span>
                    </p>
                    {
                        user && (
                            <div class="mt-4 pt-3 border-top d-flex gap-2">
                                <button
                                    id="upEditBtn"
                                    class="btn btn-primary btn-sm d-none"
                                >
                                    <i class="bi bi-pencil-square" /> Modifica
                                </button>
                                <button
                                    id="upDeleteBtn"
                                    class="btn btn-danger btn-sm d-none"
                                >
                                    <i class="bi bi-trash" /> Elimina
                                </button>
                            </div>
                        )
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Event Modal (Upcoming) -->
    <div
        class="modal fade"
        id="upEditEventModal"
        tabindex="-1"
        aria-hidden="true"
    >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modifica Evento</h5>
                    <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="up-edit-event-form">
                        <div class="mb-3">
                            <label for="upEditTitle" class="form-label"
                                >Titolo</label
                            >
                            <input
                                type="text"
                                class="form-control"
                                id="upEditTitle"
                                required
                            />
                        </div>
                        <div class="mb-3">
                            <label for="upEditLocation" class="form-label"
                                >Luogo</label
                            >
                            <input
                                type="text"
                                class="form-control"
                                id="upEditLocation"
                            />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Descrizione</label>
                            <div id="upEditEventDescEditor"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="upEditDate" class="form-label"
                                    >Data</label
                                >
                                <input
                                    type="date"
                                    class="form-control"
                                    id="upEditDate"
                                    required
                                />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="upEditTime" class="form-label"
                                    >Ora</label
                                >
                                <input
                                    type="time"
                                    class="form-control"
                                    id="upEditTime"
                                    required
                                />
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary"
                                >Aggiorna Evento</button
                            >
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        import { Modal } from "bootstrap";
        declare var Quill: any;

        const quillConfig = {
            theme: "snow",
            modules: {
                toolbar: [
                    ["bold", "italic", "strike"],
                    ["link", "blockquote", "code-block"],
                    [{ list: "ordered" }, { list: "bullet" }],
                    ["clean"],
                ],
            },
        };

        let upEditQuill: any;

        document.addEventListener("DOMContentLoaded", () => {
            const editorEl = document.getElementById("upEditEventDescEditor");
            if (editorEl) {
                upEditQuill = new Quill("#upEditEventDescEditor", quillConfig);
            }
        });

        const triggers = document.querySelectorAll(".event-trigger");
        const modalEl = document.getElementById("upcomingDetailModal");
        const modal = new Modal(modalEl);
        let currentId: string | null = null;

        triggers.forEach((t) => {
            t.addEventListener("click", async () => {
                const id = t.getAttribute("data-id");
                if (!id) return;
                currentId = id;

                try {
                    const res = await fetch(`/api/events/${id}`);
                    if (!res.ok) return;
                    const data = await res.json();

                    document.getElementById("upDetailTitle")!.textContent =
                        `${data.time} - ${data.title}`;
                    document.getElementById("upDetailDesc")!.innerHTML =
                        data.description || "<i>Nessuna descrizione.</i>";
                    document.getElementById("upDetailLocation")!.textContent =
                        data.location || "Non specificato";
                    // Logic for management buttons
                    const deleteBtn = document.getElementById("upDeleteBtn");
                    const editBtn = document.getElementById("upEditBtn");

                    const meRes = await fetch("/api/auth/me");
                    if (meRes.ok) {
                        const me = await meRes.json();
                        const canManage =
                            me.id === data.creatorId || me.isAdmin;

                        if (deleteBtn) {
                            if (canManage) deleteBtn.classList.remove("d-none");
                            else deleteBtn.classList.add("d-none");
                        }
                        if (editBtn) {
                            if (canManage) editBtn.classList.remove("d-none");
                            else editBtn.classList.add("d-none");
                        }

                        // Store full data for edit modal
                        (t as any)._eventData = data;
                    }

                    modal.show();
                } catch (e) {
                    console.error(e);
                }
            });
        });

        // Handle Delete
        document
            .getElementById("upDeleteBtn")
            ?.addEventListener("click", async () => {
                if (
                    !currentId ||
                    !confirm("Sei sicuro di voler eliminare questo evento?")
                )
                    return;
                try {
                    const res = await fetch(`/api/events/${currentId}`, {
                        method: "DELETE",
                    });
                    if (res.ok) window.location.reload();
                    else alert("Errore eliminazione");
                } catch (e) {
                    console.error(e);
                }
            });

        // Handle Edit Trigger
        const upEditModalEl = document.getElementById("upEditEventModal");
        const upEditModal = new Modal(upEditModalEl as HTMLElement);

        document
            .getElementById("upEditBtn")
            ?.addEventListener("click", async () => {
                if (!currentId) return;
                const res = await fetch(`/api/events/${currentId}`);
                if (!res.ok) return;
                const data = await res.json();

                (
                    document.getElementById("upEditTitle") as HTMLInputElement
                ).value = data.title;

                if (upEditQuill) {
                    upEditQuill.root.innerHTML = data.description || "";
                }
                (
                    document.getElementById("upEditDate") as HTMLInputElement
                ).value = data.date;
                (
                    document.getElementById(
                        "upEditLocation",
                    ) as HTMLInputElement
                ).value = data.location || "";
                (
                    document.getElementById("upEditTime") as HTMLInputElement
                ).value = data.time;

                modal.hide();
                upEditModal.show();
            });

        // Handle Edit Submit
        document
            .getElementById("up-edit-event-form")
            ?.addEventListener("submit", async (e) => {
                e.preventDefault();
                if (!currentId) return;

                const title = (
                    document.getElementById("upEditTitle") as HTMLInputElement
                ).value;
                const location = (
                    document.getElementById(
                        "upEditLocation",
                    ) as HTMLInputElement
                ).value;
                const description = upEditQuill
                    ? upEditQuill.root.innerHTML
                    : "";
                const date = (
                    document.getElementById("upEditDate") as HTMLInputElement
                ).value;
                const time = (
                    document.getElementById("upEditTime") as HTMLInputElement
                ).value;

                try {
                    const res = await fetch(`/api/events/${currentId}`, {
                        method: "PATCH",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({
                            title,
                            description,
                            location,
                            date,
                            time,
                        }),
                    });

                    if (res.ok) window.location.reload();
                    else alert("Errore aggiornamento");
                } catch (e) {
                    console.error(e);
                }
            });
    </script>
</Layout>
