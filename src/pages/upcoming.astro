---
import Layout from "../layouts/Layout.astro";
import { getEvents, getParticipants } from "../lib/db";

const events = await getEvents();
const participants = await getParticipants();

// Filter future events
const today = new Date();
today.setHours(0, 0, 0, 0);

const futureEvents = events.filter((e) => {
    const eventDate = new Date(e.date);
    return eventDate >= today;
});

// Enrich with counts
const eventsWithCount = futureEvents.map((e) => ({
    ...e,
    participantsCount: participants.filter((p) => p.eventId === e.id).length,
}));

// Sort chronologically
eventsWithCount.sort((a, b) => {
    const dateA = new Date(`${a.date}T${a.time}`);
    const dateB = new Date(`${b.date}T${b.time}`);
    return dateA.getTime() - dateB.getTime();
});

// Group by date
const groupedEvents: Record<string, typeof eventsWithCount> = {};
eventsWithCount.forEach((e) => {
    if (!groupedEvents[e.date]) {
        groupedEvents[e.date] = [];
    }
    groupedEvents[e.date].push(e);
});

const sortedDates = Object.keys(groupedEvents).sort();
---

<Layout title="Prossimi Eventi">
    <h1 class="mb-4">Prossimi Eventi</h1>

    {
        sortedDates.length === 0 ? (
            <div class="alert alert-info">Nessun evento in programma.</div>
        ) : (
            <div class="roadmap">
                {sortedDates.map((date) => {
                    const dateObj = new Date(date);
                    const dateStr = dateObj.toLocaleDateString("it-IT", {
                        weekday: "long",
                        day: "numeric",
                        month: "long",
                        year: "numeric",
                    });

                    return (
                        <div class="mb-4">
                            <h4 class="text-primary text-capitalize border-bottom pb-2">
                                {dateStr}
                            </h4>
                            <div class="list-group">
                                {groupedEvents[date].map((event) => (
                                    <button
                                        type="button"
                                        class="list-group-item list-group-item-action d-flex flex-column flex-sm-row justify-content-between align-items-sm-center event-trigger gap-2"
                                        data-id={event.id}
                                    >
                                        <div class="text-start">
                                            <span class="fw-bold me-2 text-primary">
                                                {event.time}
                                            </span>
                                            <span class="event-title">
                                                {event.title}
                                            </span>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between justify-content-sm-end w-100 w-sm-auto">
                                            <span class="badge bg-secondary bg-opacity-25 rounded-pill text-white">
                                                <i class="bi bi-people-fill me-1" />
                                                {event.participantsCount}
                                            </span>
                                        </div>
                                    </button>
                                ))}
                            </div>
                        </div>
                    );
                })}
            </div>
        )
    }

    <style>
        .roadmap h4 {
            font-weight: 600;
            letter-spacing: -0.5px;
            margin-top: 2rem;
        }
        .event-trigger {
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            color: inherit;
            margin-bottom: 0.8rem;
            border-radius: 16px !important;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            backdrop-filter: blur(8px);
            padding: 1.2rem;
        }
        .event-trigger:hover {
            background: rgba(99, 102, 241, 0.1);
            transform: translateX(8px);
            border-color: #6366f1;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        [data-bs-theme="light"] .event-trigger {
            background: rgba(255, 255, 255, 0.6);
        }
        .list-group {
            border: none;
        }
    </style>

    <!-- Reused Modal Structure (Simple version) -->
    <div
        class="modal fade"
        id="upcomingDetailModal"
        tabindex="-1"
        aria-hidden="true"
    >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="upDetailTitle"></h5>
                    <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p id="upDetailDesc"></p>
                    <p>
                        <strong>Partecipanti:</strong>
                        <span id="upDetailCount"></span>
                    </p>
                    <ul
                        id="upParticipantList"
                        class="list-group list-group-flush small mb-3"
                    >
                    </ul>
                    <button id="upJoinBtn" class="btn btn-success w-100"
                        >Partecipa</button
                    >
                    <button
                        id="upLeaveBtn"
                        class="btn btn-outline-warning w-100 d-none"
                        >Annulla Partecipazione</button
                    >
                </div>
            </div>
        </div>
    </div>

    <script>
        import { Modal } from "bootstrap";

        const triggers = document.querySelectorAll(".event-trigger");
        const modalEl = document.getElementById("upcomingDetailModal");
        const modal = new Modal(modalEl);
        let currentId: string | null = null;

        triggers.forEach((t) => {
            t.addEventListener("click", async () => {
                const id = t.getAttribute("data-id");
                if (!id) return;
                currentId = id;

                try {
                    const res = await fetch(`/api/events/${id}`);
                    if (!res.ok) return;
                    const data = await res.json();

                    document.getElementById("upDetailTitle")!.textContent =
                        `${data.time} - ${data.title}`;
                    document.getElementById("upDetailDesc")!.textContent =
                        data.description;
                    document.getElementById("upDetailCount")!.textContent =
                        data.participants.length;

                    const pList = document.getElementById("upParticipantList")!;
                    pList.innerHTML = "";
                    data.participants.forEach((u: any) => {
                        const li = document.createElement("li");
                        li.className = "list-group-item px-0 py-1";
                        li.textContent = u.nome + " " + u.cognome;
                        pList.appendChild(li);
                    });

                    // Check join status
                    const meRes = await fetch("/api/auth/me");
                    const joinBtn = document.getElementById("upJoinBtn");

                    if (meRes.ok) {
                        const me = await meRes.json();
                        const isParticipant = data.participants.some(
                            (p: any) => p.id === me.id,
                        );
                        const leaveBtn = document.getElementById("upLeaveBtn");
                        if (joinBtn) {
                            if (isParticipant) {
                                joinBtn.classList.add("d-none");
                                if (leaveBtn)
                                    leaveBtn.classList.remove("d-none");
                            } else {
                                joinBtn.classList.remove("d-none");
                                if (leaveBtn) leaveBtn.classList.add("d-none");
                            }
                        }
                    } else {
                        if (joinBtn) joinBtn.classList.add("d-none");
                    }

                    modal.show();
                } catch (e) {
                    console.error(e);
                }
            });
        });

        const joinBtn = document.getElementById("upJoinBtn");
        if (joinBtn) {
            joinBtn.addEventListener("click", async () => {
                if (!currentId) return;
                try {
                    const res = await fetch("/api/join", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ eventId: currentId }),
                    });
                    if (res.ok) {
                        alert("Partecipazione confermata!");
                        window.location.reload();
                    } else {
                        alert("Errore");
                    }
                } catch (e) {
                    console.error(e);
                }
            });
        }
        const upLeaveBtn = document.getElementById("upLeaveBtn");
        if (upLeaveBtn) {
            upLeaveBtn.addEventListener("click", async () => {
                if (!currentId) return;
                try {
                    const res = await fetch("/api/join", {
                        method: "DELETE",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ eventId: currentId }),
                    });
                    if (res.ok) {
                        alert("Partecipazione annullata");
                        window.location.reload();
                    } else {
                        alert("Errore");
                    }
                } catch (e) {
                    console.error(e);
                }
            });
        }
    </script>
</Layout>
