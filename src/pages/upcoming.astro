---
import Layout from "../layouts/Layout.astro";
import { getEvents, getParticipants } from "../lib/db";

const events = await getEvents();
const participants = await getParticipants();

// Filter future events
const today = new Date();
today.setHours(0, 0, 0, 0);

const futureEvents = events.filter((e) => {
    const eventDate = new Date(e.date);
    return eventDate >= today;
});

// Enrich with counts
const eventsWithCount = futureEvents.map((e) => ({
    ...e,
    participantsCount: participants.filter((p) => p.eventId === e.id).length,
}));

// Sort chronologically
eventsWithCount.sort((a, b) => {
    const dateA = new Date(`${a.date}T${a.time}`);
    const dateB = new Date(`${b.date}T${b.time}`);
    return dateA.getTime() - dateB.getTime();
});

// Group by date
const groupedEvents: Record<string, typeof eventsWithCount> = {};
eventsWithCount.forEach((e) => {
    if (!groupedEvents[e.date]) {
        groupedEvents[e.date] = [];
    }
    groupedEvents[e.date].push(e);
});

const sortedDates = Object.keys(groupedEvents).sort();
const user = Astro.locals.user;
---

<Layout title="Prossimi Eventi">
    <div
        class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3"
    >
        <div>
            <h1 class="display-6 mb-0">Eventi Compagnia</h1>
        </div>
        <div class="d-flex flex-wrap align-items-center gap-3">
            <div
                class="btn-group shadow-sm"
                role="group"
                aria-label="Visualizzazione"
            >
                <a href="/" class="btn btn-outline-primary">
                    <i class="bi bi-calendar3"></i>
                    <span class="d-none d-sm-inline">Calendario</span>
                </a>
                <a href="/upcoming" class="btn btn-primary active">
                    <i class="bi bi-list-ul"></i>
                    <span class="d-none d-sm-inline">Lista</span>
                </a>
            </div>

            {
                user ? (
                    <a href="/?create=true" class="btn btn-success">
                        <i class="bi bi-plus-lg" /> Crea Evento
                    </a>
                ) : (
                    <div class="alert alert-warning py-2 px-3 d-inline-block mb-0 small">
                        Accedi per creare eventi
                    </div>
                )
            }
        </div>
    </div>

    {
        sortedDates.length === 0 ? (
            <div class="alert alert-info">Nessun evento in programma.</div>
        ) : (
            <div class="roadmap">
                {sortedDates.map((date) => {
                    const dateObj = new Date(date);
                    const dateStr = dateObj.toLocaleDateString("it-IT", {
                        weekday: "long",
                        day: "numeric",
                        month: "long",
                        year: "numeric",
                    });

                    return (
                        <div class="mb-4">
                            <h4 class="text-primary text-capitalize border-bottom pb-2">
                                {dateStr}
                            </h4>
                            <div class="list-group">
                                {groupedEvents[date].map((event) => (
                                    <button
                                        type="button"
                                        class="list-group-item list-group-item-action d-flex flex-column flex-sm-row justify-content-between align-items-sm-center event-trigger gap-2"
                                        data-id={event.id}
                                    >
                                        <div class="text-start">
                                            <span class="fw-bold me-2 text-primary">
                                                {event.time}
                                            </span>
                                            <span class="event-title">
                                                {event.title}
                                            </span>
                                        </div>
                                    </button>
                                ))}
                            </div>
                        </div>
                    );
                })}
            </div>
        )
    }

    <style>
        .roadmap h4 {
            font-weight: 600;
            letter-spacing: -0.5px;
            margin-top: 2rem;
        }
        .event-trigger {
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            color: inherit;
            margin-bottom: 0.8rem;
            border-radius: 16px !important;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            backdrop-filter: blur(8px);
            padding: 1.2rem;
        }
        .event-trigger:hover {
            background: rgba(99, 102, 241, 0.1);
            transform: translateX(8px);
            border-color: #6366f1;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        [data-bs-theme="light"] .event-trigger {
            background: rgba(255, 255, 255, 0.6);
        }
        .list-group {
            border: none;
        }
    </style>

    <!-- Reused Modal Structure (Simple version) -->
    <div
        class="modal fade"
        id="upcomingDetailModal"
        tabindex="-1"
        aria-hidden="true"
    >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="upDetailTitle"></h5>
                    <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p id="upDetailDesc"></p>
                </div>
            </div>
        </div>
    </div>

    <script>
        import { Modal } from "bootstrap";

        const triggers = document.querySelectorAll(".event-trigger");
        const modalEl = document.getElementById("upcomingDetailModal");
        const modal = new Modal(modalEl);
        let currentId: string | null = null;

        triggers.forEach((t) => {
            t.addEventListener("click", async () => {
                const id = t.getAttribute("data-id");
                if (!id) return;
                currentId = id;

                try {
                    const res = await fetch(`/api/events/${id}`);
                    if (!res.ok) return;
                    const data = await res.json();

                    document.getElementById("upDetailTitle")!.textContent =
                        `${data.time} - ${data.title}`;
                    document.getElementById("upDetailDesc")!.textContent =
                        data.description;

                    modal.show();
                } catch (e) {
                    console.error(e);
                }
            });
        });
    </script>
</Layout>
